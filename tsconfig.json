{
  "compilerOptions": {
    "baseUrl": "tsconfig",
    "lib": ["es2018", "dom"],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "types": ["node"]
  },
  "include": ["src/**/*", "lib/utility/*.ts"],
  "exclude": [
    "src/**/files/**/*",
    "src/**/*_spec.ts",
    "tests",
    "lib/third_party",
    "lib/utility/*_spec.ts",
    "**/files/",
    "example"
  ]
}
